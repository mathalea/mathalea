{
    "comment"  : "cf http://usejsdoc.org/about-configuring-jsdoc.html",
    "tags"     : {
      "allowUnknownTags": true
    },
    "source"   : {
      "include": [
        "./src/js/modules/2d/",
        "./jsdoc/2d.md"
      ]
    },
    "plugins"  : ["plugins/markdown"],
    "markdown" : {
      "idInHeadings": true
    },
    "opts"     : {
      "destination": "./documentation/2d",
      "recurse"    : true,
      "private"    : false,
      "template": "node_modules/docdash"
    },
    "docdash": {
      "comment": "Cf https://github.com/clenemt/docdash (options)",
      "static": true,
      "sort": true,
      "search": true,
      "collapse": true,
      "commonNav": true
    },
    "templates": {
      "cleverLinks": true
    }
  }
